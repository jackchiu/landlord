<%= form_for @room, :url => { :controller => 'rooms', :action => 'create' } do |f| %> 
  <%= f.label :number, "Number" %>
  <%= f.text_field :number %>
  <br/>

  <%= f.hidden_field :length, :value => 0 %>
  <%= f.hidden_field :width, :value => 0 %>

  <%= f.label :name, "Floor" %>
  <%= f.select :floor, options_for_select([['First', 1], ['Second', 2], ['Third', 3]]) %>

  <%= f.label :group, "Group" %>
  <%= f.select :group, options_for_select([['East', 'east'], ['West', 'west']]) %>
  <br/>

  <%= f.hidden_field :state, :value=>"empty" %>

  <%= f.submit "Create" %>
<% end %>
